    "version": "2.0.0",
    "tasks": [
        {
            "label": "Eksekusi memakai input.txt file",
            "type": "shell",
            "command": [
                "clang++ -Wall",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out",
                "&&",
                "${fileDirname}/${fileBasenameNoExtension}.out",
                "<",
                "${fileDirname}/${fileBasenameNoExtension}.txt"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Eksekusi tidak memakai input.txt file",
            "type": "shell",
            "command": [
                "clang++ -Wall",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out",
                "&&",
                "${fileDirname}/${fileBasenameNoExtension}.out"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
    ]
}